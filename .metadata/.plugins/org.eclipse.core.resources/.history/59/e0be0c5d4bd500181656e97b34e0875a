import java.util.Arrays;
import java.util.Random;

public class StatisticalDistribution {
	
	private Ball[] balls;
	private int numBucket;
	
	public StatisticalDistribution(int ball, int bucket) {
		balls  = new Ball[ball];
		numBucket = bucket ;
	}
	
	public Ball[] pathTaken() {
		int times = 0;
		int end = 1;
		String[] path = new String[numBucket];
		
		for (int i=0;i<balls.length;i++) {
			while (times < numBucket) {
				Random n = new Random();
				if (n.nextInt(2) == 0) {
					path[times] = "L";
					if (end >= 2) {end = end - 1;} else {end = 1;}
				}
				else {
					path[times] = "R";
					if (end <= 4) {end = end + 1;} else {end = 5;}
				}
				times += 1;
			}
			balls[i].setEnds(end);
			balls[i].setPaths(path);
			times = 0;
			end = 1;
		}
		
		return path;
	}
	
	
	
	public static void main(String[] args) {
		
		int balls = 3;
		int buckets = 5;
		int times = 0;
		int end = 1;
		String[] path = new String[buckets];
		
		while (times < buckets) {
			Random n = new Random();
			if (n.nextInt(2) == 0) {
				path[times] = "L";
				if (end >= 2) {end = end - 1;} else {end = 1;}
			}
			else {
				path[times] = "R";
				if (end <= 4) {end = end + 1;} else {end = 5;}
			}
			times += 1;
		}
		
		
		System.out.println(end);
		System.out.println(Arrays.toString(path));
		
	}
	
}
