import java.util.Arrays;
import java.util.Random;

public class StatisticalDistribution {
	
//	private int numBalls;
//	private int numBucket;
//	
//	public StatisticalDistribution(int ball, int bucket) {
//		numBalls  = ball;
//		numBucket = bucket ;
//	}
//	
//	public void pathTaken() {
//		
//	}
	
	
	
	public static void main(String[] args) {
		
		int balls = 3;
		int buckets = 5;
		int times = 0;
		int end = 1;
		String[] path = new String[buckets];
		
		while (times < buckets) {
			Random n = new Random();
			if (n.nextInt(2) == 0) {
				path[times] = "L";
				if (end >= 2) {end = end - 1;} else {end = 1;}
			}
			else {
				path[times] = "R";
				if (end <= 4) {end = end + 1;} else {end = 5;}
			}
			times += 1;
		}
		
		
		System.out.println(end);
		System.out.println(Arrays.toString(path));
		
	}
	
}
