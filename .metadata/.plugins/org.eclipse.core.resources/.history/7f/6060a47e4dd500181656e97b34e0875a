import java.util.Arrays;
import java.util.Random;

public class BallsAndBuckets {
	
	private Ball[] balls;
	private int numBucket;
	
	public BallsAndBuckets(int ball, int bucket) {
		balls  = new Ball[ball];
		numBucket = bucket ;
	}
	
	public Ball[] pathTaken() {
			
		for (int i=0;i<balls.length;i++) {
			int times = 0;
			int end = 1;
			String[] path = new String[numBucket-1];
			while (times < numBucket-1) {
				Random n = new Random();
				if (n.nextInt(2) == 0) {
					path[times] = "L";
					if (end >= 2) {end = end - 1;} else {end = 1;}
				}
				else {
					path[times] = "R";
					if (end <= 4) {end = end + 1;} else {end = 5;}
				}
				times += 1;
			}
			//System.out.println(end);
			//System.out.println(Arrays.toString(path));
			balls[i] = new Ball(end, path);
		}
		return balls;
	}
	
	public static void main(String[] args) {
		
		BallsAndBuckets bb = new BallsAndBuckets(3,5);
		
		Ball[] ball = bb.pathTaken();
		
		//Ball ball = new Ball();
		
		for (int i=0;i<ball.length;i++) {
			System.out.println(ball[i].getEnds());
			System.out.println(ball[i].getPaths());
		}
		
	}
	
}


